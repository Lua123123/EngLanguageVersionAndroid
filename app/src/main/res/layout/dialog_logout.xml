<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">

    <LinearLayout
        android:id="@+id/layoutDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_linear_layout"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/exampleDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:text="Do you want to sign out?"
            android:textAlignment="center"
            android:textColor="@color/nearBlack"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_img_close"
        android:padding="8dp"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toTopOf="@+id/layoutDialog"
        app:layout_constraintEnd_toEndOf="@+id/layoutDialog"
        app:layout_constraintStart_toStartOf="@+id/layoutDialog"
        app:layout_constraintTop_toTopOf="@+id/layoutDialog" />

    <Button
        android:id="@+id/btnConFirmDialog"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/nearBlack"
        android:text="CONFIRMAR"
        android:textAllCaps="false"
        android:textColor="@color/gold"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/layoutDialog"
        app:layout_constraintEnd_toEndOf="@+id/layoutDialog"
        app:layout_constraintStart_toStartOf="@+id/layoutDialog"
        app:layout_constraintTop_toBottomOf="@+id/layoutDialog" />

    <Button
        android:id="@+id/btnCancelDialog"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:alpha="0.4"
        android:backgroundTint="@android:color/darker_gray"
        android:gravity="center"
        android:text="CANCEL"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/btnConFirmDialog"
        app:layout_constraintStart_toStartOf="@+id/btnConFirmDialog"
        app:layout_constraintTop_toBottomOf="@+id/btnConFirmDialog" />

</androidx.constraintlayout.widget.ConstraintLayout>