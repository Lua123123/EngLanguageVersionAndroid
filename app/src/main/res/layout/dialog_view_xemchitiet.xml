<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="20dp"
    android:paddingStart="20dp">

    <LinearLayout
        android:id="@+id/layoutDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_linear_layout"
        android:layout_marginBottom="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/wordDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Word"
            android:textAlignment="center"
            android:textColor="@color/nearBlack"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/speechDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Word"
            android:textAlignment="center"
            android:textColor="@color/nearBlack"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/meanDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Word"
            android:alpha="0.7"
            android:textAlignment="center"
            android:textColor="@color/nearBlack"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/exampleDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Your satisfaction is guaranteed or you'll get your money back."
            android:textAlignment="center"
            android:textColor="@color/nearBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/translateDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Sự hài lòng của bạn được bảo đảm, hoặc là bạn sẽ được nhận lại tiền của mình"
            android:textAlignment="center"
            android:textColor="@color/nearBlack"
            android:alpha="0.7"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_img_example"
        android:src="@drawable/ic_check"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutDialog"
        app:layout_constraintTop_toTopOf="@+id/layoutDialog"
        app:layout_constraintStart_toStartOf="@+id/layoutDialog"
        app:layout_constraintEnd_toEndOf="@+id/layoutDialog"/>

    <ImageView
        android:id="@+id/imgVolumeDialog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_volume_dialog"
        android:backgroundTint="@color/nearBlack"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/layoutDialog"
        app:layout_constraintRight_toRightOf="@+id/layoutDialog"/>

    <Button
        android:id="@+id/btnConFirmDialog"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="CONFIRMAR"
        android:backgroundTint="@color/nearBlack"
        android:textColor="@color/gold"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/layoutDialog"
        app:layout_constraintEnd_toEndOf="@+id/layoutDialog"
        app:layout_constraintBottom_toBottomOf="@+id/layoutDialog"
        app:layout_constraintTop_toBottomOf="@+id/layoutDialog"/>

</androidx.constraintlayout.widget.ConstraintLayout>